{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": [
            "off"
        ],
        "no-console": [
            "off"
        ],
        "semi": 0,
        "no-undef": 0,
        "operator-linebreak": 0,
        "space-before-function-paren": 0
    },
    "globals": {
      "Handlebars": false
    }
}
